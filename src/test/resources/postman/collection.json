{
  "info": {
    "name": "qa-java-automation-starter - JSONPlaceholder",
    "_postman_id": "qa-java-automation-starter-jsonplaceholder-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Smoke - GET /posts/1",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/posts/1",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "1"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is JSON', function () {",
              "  pm.response.to.be.json;",
              "});",
              "",
              "pm.test('Has expected fields', function () {",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.have.property('userId');",
              "  pm.expect(json).to.have.property('id', 1);",
              "  pm.expect(json).to.have.property('title');",
              "  pm.expect(json).to.have.property('body');",
              "});",
              "",
              "pm.test('Matches JSON Schema (post)', function () {",
              "  const schema = {",
              "    type: 'object',",
              "    required: ['userId', 'id', 'title', 'body'],",
              "    properties: {",
              "      userId: { type: 'number' },",
              "      id: { type: 'number' },",
              "      title: { type: 'string' },",
              "      body: { type: 'string' }",
              "    }",
              "  };",
              "  pm.response.to.have.jsonSchema(schema);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Smoke - GET /users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Returns an array with at least 1 user', function () {",
              "  const json = pm.response.json();",
              "  pm.expect(json).to.be.an('array');",
              "  pm.expect(json.length).to.be.greaterThan(0);",
              "});",
              "",
              "pm.test('First user has id and email', function () {",
              "  const json = pm.response.json();",
              "  pm.expect(json[0]).to.have.property('id');",
              "  pm.expect(json[0]).to.have.property('email');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Data-driven - GET /posts/{{postId}}",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Returned post id matches postId from data', function () {",
              "  const json = pm.response.json();",
              "  const expected = Number(pm.iterationData.get('postId'));",
              "  pm.expect(json).to.have.property('id', expected);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
